<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/grey_background"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp">



        <EditText
            android:id="@+id/etNewExam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="22dp"
            android:padding="10dp"
            android:textColor="@color/main"
            android:textColorHint="@color/main"
            android:hint="Question"
            android:background="@color/transparent"
            android:textStyle="bold"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RadioGroup
                    android:id="@+id/rgEditExam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RadioButton
                        android:id="@+id/rbEditExamOption1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:buttonTint="@color/main"/>
                    <RadioButton
                        android:id="@+id/rbEditExamOption2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:buttonTint="@color/main"/>
                    <RadioButton
                        android:id="@+id/rbEditExamOption3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:buttonTint="@color/main"/>
                    <RadioButton
                        android:id="@+id/rbEditExamOption4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:paddingVertical="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"
                        android:buttonTint="@color/main"/>

                </RadioGroup>



            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/etEditExamOption1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:paddingVertical="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:hint="Choice 1"/>
                <EditText
                    android:id="@+id/etEditExamOption2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:paddingVertical="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:hint="Choice 2"/>
                <EditText
                    android:id="@+id/etEditExamOption3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:paddingVertical="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:hint="Choice 3"/>
                <EditText
                    android:id="@+id/etEditExamOption4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:paddingVertical="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:background="@color/transparent"
                    android:hint="Choice 4"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llNewQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/grey_background"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="22dp"
            android:padding="10dp"
            android:textColor="@color/main"
            android:text="New Question"
            android:textStyle="bold"/>


    </LinearLayout>

</LinearLayout>